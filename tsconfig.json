{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs", 
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": [ "dom","es6" ],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ]
}